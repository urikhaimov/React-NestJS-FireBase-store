{
  "name": "cleaned-store",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:frontend": "npm --workspace apps/frontend run dev",
    "dev:backend": "npm --workspace apps/backend run start:dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
