{
  "name": "cleaned-store",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:frontend": "npm run dev --workspace apps/frontend",
    "dev:backend": "npm run start:dev --workspace apps/backend",
    "build": "concurrently \"npm run build --workspace apps/frontend\" \"npm run build --workspace apps/backend\"",
    "lint": "concurrently \"npm run lint --workspace apps/frontend\" \"npm run lint --workspace apps/backend\"",
    "start:dev": "nest start --watch",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{json,mdx}": "npx prettier --write",
    "*.{js,ts,jsx,tsx}": [
      "npx prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.3.4",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-mdx": "^3.6.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "hoist-non-react-statics": "^3.3.2",
    "winston": "^3.17.0"
  }
}
