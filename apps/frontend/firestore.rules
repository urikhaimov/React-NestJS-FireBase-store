rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /products/{productId} {
      allow read: if true; // Allow read access to all products
      allow write: if request.auth != null; // Require authentication
    }

    match /categories/{docId} {
      allow read: if true; // Allow read access to all categories
      allow write: if request.auth != null; // Require authentication
    }

    match /orders/{orderId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /themes/{themeId} {
      allow read: if true; // Require authentication for reading themes
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId; // âœ… for useAuthStore
    }
  }
}
